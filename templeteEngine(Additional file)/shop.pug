extends ./layouts/main-layout.pug

block content
    main
        if prods.length > 0
            .grid 
                each product in prods
                    articlt.card.product-item
                        header.card__header    
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://images.unsplash.com/photo-1602731465531-14015e83a6de?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=300&q=80",alt="")
                        div.card__content
                            h2.product__price $19.99
                            p.product__discription a very interesting book 
                        .card__actions 
                            button.btn Add to cart 
        else 
            h1 No product